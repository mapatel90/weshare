{
  "openapi": "3.0.0",
  "info": {
    "title": "Weshare — API",
    "version": "1.0.0",
    "description": "This documents the local Next.js proxy endpoints that call SolisCloud."
  },
  "servers": [
      { "url": "http://api.weshare-energy.com", "description": " Weshare Server" }
  ],
  "paths": {
    "/api/cron/demo": {
      "post": {
        "summary": "userStationList route — find inverter detail via SolisCloud",
        "description": "Calls /v1/api/userStationList → /v1/api/stationDetail → /v1/api/inverterDetail and returns inverter detail.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "inverterSn": { "type": "string", "example": "1031270257120353" }
                },
                "required": ["inverterSn"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Inverter detail returned",
            "content": {
              "application/json": {
                "schema": { "type": "object" }
              }
            }
          },
          "400": { "description": "Bad request (missing inverterSn)" },
          "403": { "description": "SolisCloud signature or auth error" }
        }
      }
    }
  }
}
