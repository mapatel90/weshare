# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Application
NODE_ENV=development

# Backend API Configuration
# Development
# NEXT_PUBLIC_BACKEND_URL=http://localhost:5000
API_URL=http://localhost:5000

NODE_ENV=development

# Production (example)
# NEXT_PUBLIC_BACKEND_URL=https://api.yourapp.com

# Staging (example)  
# NEXT_PUBLIC_BACKEND_URL=https://staging-api.yourapp.com


# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="465"
# SMTP_SECURE="true"
# SMTP_USER=""
# SMTP_PASSWORD=""

# Encryption Key for S3 Settings (Required for encrypting AWS credentials in DB)
ENCRYPTION_KEY=your-32-char-encryption-key-change-in-production-min32chars

# System Users Configuration
# Single admin ID (backward compatibility) - receives system notifications
ADMIN_USER_ID=1

# Multiple admin IDs (comma-separated) - for when you have multiple super admins
# All these users will receive system notifications
# Example: ADMIN_USER_IDS=1,2,3
ADMIN_USER_IDS=1

NEXT_PUBLIC_UPLOAD_URL='https://weshare-uploads.s3.ap-southeast-1.amazonaws.com/'